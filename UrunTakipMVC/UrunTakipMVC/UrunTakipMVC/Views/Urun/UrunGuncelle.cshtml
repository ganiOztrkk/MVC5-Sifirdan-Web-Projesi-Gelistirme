@model UrunTakipMVC.Models.Entity.Urunler
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ID)
        <label>Ürün Adı</label>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        <br />
        <label>Ürün Marka</label>
        @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
        <br />
        <label>Ürün Stok</label>
        @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
        <br />
        <label>Ürün Alış Fiyat</label>
        @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control" })
        <br />
        <label>Ürün Satış Fiyat</label>
        @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control" })
        <br />
        <label>Ürün Kategori</label>
        @Html.DropDownListFor(x => x.Kategoriler.ID, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control", @style = "width: 40%" })
        <br />
        <button class="btn btn-info" style="margin-top: 10px">Güncelle</button>
    }
</div>